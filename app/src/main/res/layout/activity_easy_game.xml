<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context="aboli.musicbee.MainActivity">

    <Button
        android:id="@+id/C"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="clickC"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/D" />

    <Button
        android:id="@+id/D"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickD"
        android:text="D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/C"
        app:layout_constraintRight_toLeftOf="@+id/E" />

    <Button
        android:id="@+id/E"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickE"
        android:text="E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/D"
        app:layout_constraintRight_toLeftOf="@+id/F" />

    <Button
        android:id="@+id/F"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickF"
        android:text="F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/E"
        app:layout_constraintRight_toLeftOf="@+id/G" />

    <Button
        android:id="@+id/G"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickG"
        android:text="G"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/F"
        app:layout_constraintRight_toLeftOf="@+id/A" />

    <Button
        android:id="@+id/A"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickA"
        android:text="A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/G"
        app:layout_constraintRight_toLeftOf="@+id/B" />

    <Button
        android:id="@+id/B"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/background_light"
        android:onClick="onClickB"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/A"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="1dp" />

    <Button
        android:id="@+id/CsDf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintRight_toLeftOf="@+id/DsEf"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/DsEf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintRight_toLeftOf="@+id/FsGf"
        app:layout_constraintLeft_toRightOf="@+id/CsDf"
        android:layout_marginRight="80dp" />

    <Button
        android:id="@+id/FsGf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintRight_toLeftOf="@+id/GsAf"
        app:layout_constraintLeft_toRightOf="@+id/DsEf"
        android:layout_marginLeft="83dp" />

    <Button
        android:id="@+id/GsAf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintRight_toLeftOf="@+id/AsBf"
        app:layout_constraintLeft_toRightOf="@+id/FsGf" />

    <Button
        android:id="@+id/AsBf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintLeft_toRightOf="@+id/GsAf"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/Spell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Spell:"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/timerText"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:onClick="clickClear"
        android:text="clear"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/submit"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/A"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/word"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:background="@color/backgroundBlueDull"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/E"
        app:layout_constraintRight_toLeftOf="@+id/clear"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Time: 60"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/scoreText"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/spellWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/Spell"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:onClick="checkAnswer"
        android:text="Got It!"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/word"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/B"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        android:layout_marginStart="16dp" />

</android.support.constraint.ConstraintLayout>
