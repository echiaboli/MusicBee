<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context="aboli.musicbee.MainActivity">

    <Button
        android:id="@+id/C"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/background_light"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/D"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/D"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/background_light"
        android:text="D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/C"
        app:layout_constraintRight_toLeftOf="@+id/E"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/E"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/background_light"
        android:text="E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/D"
        app:layout_constraintRight_toLeftOf="@+id/F"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/F"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/background_light"
        android:text="F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/E"
        app:layout_constraintRight_toLeftOf="@+id/G"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/G"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/background_light"
        android:text="G"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/F"
        app:layout_constraintRight_toLeftOf="@+id/A"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/A"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/background_light"
        android:text="A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/G"
        app:layout_constraintRight_toLeftOf="@+id/B"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/B"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/background_light"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/A"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp" />

    <Button
        android:id="@+id/CsDf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/DsEf" />

    <Button
        android:id="@+id/DsEf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="35dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/CsDf"
        app:layout_constraintRight_toLeftOf="@+id/FsGf" />

    <Button
        android:id="@+id/FsGf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="57dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/DsEf"
        app:layout_constraintRight_toLeftOf="@+id/GsAf" />

    <Button
        android:id="@+id/GsAf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="22dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/FsGf"
        app:layout_constraintRight_toLeftOf="@+id/AsBf" />

    <Button
        android:id="@+id/AsBf"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="47dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/GsAf"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/Spell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Spell:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="clear"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="175dp" />

    <TextView
        android:id="@+id/word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/clear" />

</android.support.constraint.ConstraintLayout>
